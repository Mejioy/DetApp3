@model DetailingCenterApp.Models.Automobile

@{
    ViewData["Title"] = "Добавление";
}
@if (User.IsInRole("employer"))
{
<h1>Добавление</h1>

<h4>Автомобиль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mark" class="control-label"></label>
                <input asp-for="Mark" class="form-control" />
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gosnumber" class="control-label"></label>
                <input asp-for="Gosnumber" class="form-control" />
                <span asp-validation-for="Gosnumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Владелец</label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientID"></select>
                   
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{
<h1>Авторизованный пользователь не является сотрудником</h1>
}