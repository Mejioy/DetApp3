@model IEnumerable<DetailingCenterApp.Models.Client>

@{
    ViewData["Title"] = "Список";
}

<h1>Клиенты</h1>

<p>
    <a asp-action="Create">Добавление</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronym)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.ClientID">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
