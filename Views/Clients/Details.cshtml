@model DetailingCenterApp.Models.Client

@{
    ViewData["Title"] = "Подробная информация";
}
@if (User.IsInRole("employer"))
{
<h1>Подробная информация</h1>

<div>
    <h4>Клиент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patronym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronym)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>
<div>
    <div>
        <a asp-action="GetReport" asp-route-id="@Model?.ClientID">Получить список автомобилей клиента</a>
    </div>
    <a asp-action="Edit" asp-route-id="@Model?.ClientID">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
}
else
{
    <h1>Авторизованный пользователь не является сотрудником</h1>
}