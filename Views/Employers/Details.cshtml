@model DetailingCenterApp.Models.Employer

@{
    ViewData["Title"] = "Подробная информация";
}
@if (User.IsInRole("admin"))
{
<h1>Подробная информация</h1>

<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patronym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronym)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Housenumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Housenumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appartmentnumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appartmentnumber)
        </dd>
        <dt class="col-sm-2">
            Фотография сотрудника
        </dt>                  
    </dl>
    @if (@Model.Photo != null)
        {
            <img class="mt-4 mb-4" width="200"
                 src=@Model.Photo>
        } 
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EmployerID">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
}
else
{
    <h1>Авторизованный пользователь не является администратором</h1>
}